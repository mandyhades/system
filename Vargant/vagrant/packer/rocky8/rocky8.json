{
  "builders": [
    {
      "boot_command": [
        "<up><wait><tab> net.ifnames=0 biosdevname=0 text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "12s",
      "disk_size": "{{user `harddisk_size`}}",
      "guest_additions_path": "/tmp/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Linux_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "0de5f12eba93e00fefc06cdb0aa4389a0972a4212977362ea18bde46a1a1aa4f",
      "iso_url": "{{user `iso_location`}}/Rocky-8.4-x86_64-minimal.iso",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": "/tmp/.vbox_version",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "post-processors": [
    {
      "compression_level": 6,
      "only": [
        "virtualbox-iso"
      ],
      "output": "build/{{user `vm_name`}}-x86_64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "script": "scripts/vagrant_user_setup.sh",
      "type": "shell"
    },
    {
      "inline": "dnf update -y",
      "type": "shell"
    },
    {
      "inline": "reboot",
      "type": "shell",
      "expect_disconnect": true
    },
    {
      "scripts": [
        "scripts/vbox_guest_additions.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell",
      "pause_before": "10s",
      "timeout": "10s"
    }
  ],
  "variables": {
    "harddisk_size": "65536",
    "iso_location": "/iso",
    "vm_name": "rocky8"
  }
}