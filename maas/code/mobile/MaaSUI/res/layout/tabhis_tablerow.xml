<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center">
    
    <TextView 
        android:id="@+id/tabhis_tr_id"
        android:layout_width="100dp"
        android:layout_height="50dp" 
        android:background="@drawable/cellborder_item"
        android:gravity="center"/>
    
    <TextView 
        android:id="@+id/tabhis_tr_name"
        android:layout_width="150dp"
        android:layout_height="50dp" 
        android:background="@drawable/cellborder_item"
        android:gravity="center"/>
    
    <TextView 
        android:id="@+id/tabhis_tr_starttime"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/cellborder_item" 
        android:gravity="center"/>

    <TextView 
        android:id="@+id/tabhis_tr_finishtime"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/cellborder_item" 
        android:gravity="center"/>
    
    <TextView 
        android:id="@+id/tabhis_tr_state"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/cellborder_item" 
        android:gravity="center"/>
</TableRow>